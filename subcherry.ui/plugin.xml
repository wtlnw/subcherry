<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.subcherry.ui.preferences.SubcherryPreferenceInitializer">
      </initializer>
   </extension>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.subcherry.ui.preferences.SubcherryPreferencePage"
            id="subcherry.ui.preferences.SubcherryPreferencePage"
            name="Subcherry">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.team.ui.category.team"
            id="subcherry.ui.commands.merge"
            name="Subcherry Merge">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.subcherry.ui.handlers.SubcherryMergeHandler"
            commandId="subcherry.ui.commands.merge">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="subcherry.ui.toolbars">
            <command
                  commandId="subcherry.ui.commands.merge"
                  icon="icons/sample.png"
                  id="subcherry.ui.toolbars.merge"
                  tooltip="Open the merge wizard.">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
</plugin>
