<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.subcherry.ui.preferences.SubcherryPreferenceInitializer">
      </initializer>
   </extension>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.subcherry.ui.preferences.SubcherryPreferencePage"
            id="subcherry.ui.preferences.SubcherryPreferencePage"
            name="Subcherry">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.subcherry.ui.category"
            name="Subcherry">
      </category>
      <command
            categoryId="com.subcherry.ui.category"
            defaultHandler="com.subcherry.ui.handlers.SubcherryWizardHandler"
            id="subcherry.ui.commands.merge"
            name="Subcherry Merge">
      </command>
      <command
            categoryId="com.subcherry.ui.category"
            id="com.subcherry.ui.commands.run"
            name="Run Merge">
      </command>
      <command
            categoryId="com.subcherry.ui.category"
            id="com.subcherry.ui.commands.pause"
            name="Pause Merge">
      </command>
      <command
            categoryId="com.subcherry.ui.category"
            id="com.subcherry.ui.commands.skip"
            name="Skip Revision">
      </command>
      <command
            categoryId="com.subcherry.ui.category"
            id="com.subcherry.ui.commands.reset"
            name="Reset Revision">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="subcherry.ui.toolbars">
            <command
                  commandId="subcherry.ui.commands.merge"
                  icon="icons/etool/mrg_wiz.png"
                  id="subcherry.ui.toolbars.merge"
                  tooltip="Open the merge wizard.">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:com.subcherry.ui.views.SubcherryMergeView">
         <command
               commandId="com.subcherry.ui.commands.run"
               id="subcherry.ui.toolbars.run"
               label="Run"
               tooltip="Merge all revisions automatically.">
         </command>
         <command
               commandId="com.subcherry.ui.commands.pause"
               id="subcherry.ui.toolbars.pause"
               label="Pause"
               tooltip="Pause automatic merge.">
         </command>
         <command
               commandId="com.subcherry.ui.commands.skip"
               id="subcherry.ui.toolbars.skip"
               label="Skip"
               tooltip="Skip the current revision.">
         </command>
         <command
               commandId="com.subcherry.ui.commands.reset"
               id="subcherry.ui.toolbars.reset"
               label="Reset"
               tooltip="Reset the current revision.">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.tigris.subversion.subclipse"
            class="com.subcherry.ui.views.SubcherryMergeView"
            id="com.subcherry.ui.views.SubcherryMergeView"
            inject="false"
            name="Subcherry Merge"
            restorable="false">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.subcherry.ui.handlers.SubcherryRunHandler"
            commandId="com.subcherry.ui.commands.run">
         <enabledWhen>
            <reference
                  definitionId="com.subcherry.ui.expressions.SubcherryMergeViewPaused">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="com.subcherry.ui.handlers.SubcherryPauseHandler"
            commandId="com.subcherry.ui.commands.pause">
         <enabledWhen>
            <reference
                  definitionId="com.subcherry.ui.expressions.SubcherryMergeViewRunning">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="com.subcherry.ui.handlers.SubcherrySkipHandler"
            commandId="com.subcherry.ui.commands.skip">
         <enabledWhen>
            <reference
                  definitionId="com.subcherry.ui.expressions.SubcherryMergeViewPaused">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="com.subcherry.ui.handlers.SubcherryResetHandler"
            commandId="com.subcherry.ui.commands.reset">
         <enabledWhen>
            <reference
                  definitionId="com.subcherry.ui.expressions.SubcherryMergeViewPaused">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.subcherry.ui.expressions.SubcherryMergeViewRunning">
         <with
               variable="activePart">
            <and>
               <instanceof
                     value="com.subcherry.ui.views.SubcherryMergeView">
               </instanceof>
               <test
                     property="com.subcherry.ui.merge.state"
                     value="running">
               </test>
            </and>
         </with>
      </definition>
      <definition
            id="com.subcherry.ui.expressions.SubcherryMergeViewPaused">
         <with
               variable="activePart">
            <and>
               <instanceof
                     value="com.subcherry.ui.views.SubcherryMergeView">
               </instanceof>
               <not>
                  <test
                        property="com.subcherry.ui.merge.state"
                        value="running">
                  </test>
               </not>
               <test
                     property="com.subcherry.ui.merge.entry"
                     value="*">
               </test>
            </and>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.subcherry.ui.expressions.SubcherryStateTester"
            id="com.subcherry.ui.merge.tester.state"
            namespace="com.subcherry.ui.merge"
            properties="state"
            type="org.eclipse.ui.IWorkbenchPart">
      </propertyTester>
      <propertyTester
            class="com.subcherry.ui.expressions.SubcherryEntryTester"
            id="com.subcherry.ui.merge.tester.entry"
            namespace="com.subcherry.ui.merge"
            properties="entry"
            type="org.eclipse.ui.IWorkbenchPart">
      </propertyTester>
   </extension>
</plugin>
